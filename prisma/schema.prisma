// prisma/schema.prisma
datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

// ENUMS //
enum Role {
  BUYER
  SUPPLIER
  ADMIN
}

enum VerificationStatus {
  PENDING
  VERIFIED
  REJECTED
}

enum ProductStatus {
  DRAFT
  ACTIVE
  ARCHIVED
}

enum RfqStatus {
  OPEN
  CLOSED
  EXPIRED
}

enum LeadStatus {
  NEW
  CONTACTED
  QUOTED
  REJECTED
}

enum SubscriptionStatus {
  ACTIVE
  INACTIVE
  CANCELLED
}

// MODELS //

model User {
  id              Int            @id @default(autoincrement())
  email           String         @unique
  name            String
  password        String
  role            Role           @default(BUYER)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  supplierProfile SupplierProfile?
  subscription    Subscription?
  rfqs            Rfq[]
  reviewsGiven    Review[]
  notifications   Notification[]
}

model SupplierProfile {
  id                 Int                @id @default(autoincrement())
  companyName        String
  companyInfo        String             @db.Text
  address            String
  gstNumber          String?
  panNumber          String?
  contactPhone       String
  serviceAreas       String // Simple text field for now
  certifications     String? // Simple text field for now
  verificationStatus VerificationStatus @default(PENDING)
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt

  user    User   @relation(fields: [userId], references: [id])
  userId  Int    @unique

  products        Product[]
  leads           Lead[]
  reviewsReceived Review[]
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  slug  String @unique

  subcategories Subcategory[]
  products      Product[]
  rfqs          Rfq[]
}

model Subcategory {
  id   Int    @id @default(autoincrement())
  name String
  slug String @unique

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int

  products Product[]
}

model Product {
  id               Int           @id @default(autoincrement())
  title            String
  description      String        @db.Text
  images           String[]
  price            Decimal?      @db.Decimal(10, 2)
  priceOnRequest   Boolean       @default(false)
  minOrderQuantity Int           @default(1)
  unit             String        // e.g., "piece", "kg", "ton"
  leadTime         String?       // e.g., "7-10 days"
  location         String
  tags             String[]
  status           ProductStatus @default(DRAFT)
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  supplier      SupplierProfile @relation(fields: [supplierId], references: [id])
  supplierId    Int
  category      Category        @relation(fields: [categoryId], references: [id])
  categoryId    Int
  subcategory   Subcategory?    @relation(fields: [subcategoryId], references: [id])
  subcategoryId Int?
}

model Rfq {
  id          Int       @id @default(autoincrement())
  title       String
  description String    @db.Text
  quantity    Int
  unit        String
  budget      Decimal?  @db.Decimal(12, 2)
  location    String
  timeline    String?
  status      RfqStatus @default(OPEN)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  buyer      User     @relation(fields: [buyerId], references: [id])
  buyerId    Int
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int

  leads Lead[]
}

model Lead {
  id        Int        @id @default(autoincrement())
  status    LeadStatus @default(NEW)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  rfq      Rfq             @relation(fields: [rfqId], references: [id])
  rfqId    Int
  supplier SupplierProfile @relation(fields: [supplierId], references: [id])
  supplierId Int

  messages Message[]

  @@unique([rfqId, supplierId])
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String   @db.Text
  createdAt DateTime @default(now())

  lead    Lead @relation(fields: [leadId], references: [id])
  leadId  Int
  senderId Int // ID of the User who sent it
}

model Plan {
  id              Int      @id @default(autoincrement())
  name            String   @unique
  price           Decimal  @db.Decimal(8, 2)
  productLimit    Int
  leadLimit       Int      // per month
  priorityListing Boolean  @default(false)

  subscriptions Subscription[]
}

model Subscription {
  id        Int                @id @default(autoincrement())
  startDate DateTime
  endDate   DateTime
  status    SubscriptionStatus @default(ACTIVE)

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique
  plan   Plan @relation(fields: [planId], references: [id])
  planId Int
}

model Review {
  id          Int      @id @default(autoincrement())
  rating      Int      // 1 to 5
  comment     String?  @db.Text
  isApproved  Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  buyer    User            @relation(fields: [buyerId], references: [id])
  buyerId  Int
  supplier SupplierProfile @relation(fields: [supplierId], references: [id])
  supplierId Int
}

model Notification {
  id      Int      @id @default(autoincrement())
  message String
  isRead  Boolean  @default(false)
  link    String?
  createdAt DateTime @default(now())

  user   User @relation(fields: [userId], references: [id])
  userId Int
}
